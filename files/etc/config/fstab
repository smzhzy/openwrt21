
config global
	option anon_swap '0'
	option auto_swap '1'
	option auto_mount '1'
	option delay_root '5'
	option check_fs '0'
	option anon_mount '1'

config mount
	option enabled '1'
	option target '/opt/'
	option fstype 'ext4'
	option device '/dev/sda3'

config mount
	option enabled '1'
	option fstype 'ext4'
	option device '/dev/sdb1'
	option target '/mnt/sdb1/'

